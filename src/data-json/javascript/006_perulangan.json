    "special_keyword": [
        {
            "title": "#mark_code[break]",
            "desc": [
                "Break merupakan statement untuk mengakhiri perulangan, biasanya digunakan pengkondisian untuk menghentikannya."
            ],
            "code": [
                "#comment[// Kode ini akan berhenti jika i mencapai no 15]",
